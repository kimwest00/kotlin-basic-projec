<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/tv_timer_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Week7 Timer"
        android:textSize="30sp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/et_timer_limit"
        />

    <EditText
        android:id="@+id/et_timer_limit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="설정할 시간을 입력해주세요"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/bt_timer_start"
        android:text="start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/et_timer_limit"
        app:layout_constraintEnd_toEndOf="@id/et_timer_limit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_timer_limit"/>

</androidx.constraintlayout.widget.ConstraintLayout>