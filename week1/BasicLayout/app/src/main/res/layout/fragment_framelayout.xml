<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center">

<FrameLayout
    android:id="@+id/layout_profile"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
   >
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_profile_background"
        android:layout_height="95dp"
        android:layout_width="95dp"
        app:shapeAppearance="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
        android:src="#D6D6D6"
        />
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_profile_avatar"
        android:layout_width="49.77dp"
        android:layout_height="52.11dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_default_profile"
       />
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_add_background"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="bottom"
            app:shapeAppearance="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
            android:src="#777777"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_add_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/baseline_camera_alt_24"
            />
    </FrameLayout>


</FrameLayout>
        <TextView
            android:layout_gravity="center"
            android:id="@+id/tv_nickname_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="프로필 사진 등록하기"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginTop="3dp"
            />





</androidx.appcompat.widget.LinearLayoutCompat>