<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal">
    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:id="@+id/layout_profile_record_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="30dp"
        android:paddingVertical="6dp"
        android:layout_marginVertical="21dp"
        android:layout_marginTop="11dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingStart="35dp"
        android:paddingEnd="35dp"
        android:orientation="horizontal"
        android:showDividers="middle"
        android:divider="@drawable/iv_divider_vertical"
        android:background="@drawable/iv_border_background">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="11dp"
        android:paddingVertical="10dp">
        <TextView
            android:id="@+id/tv_thisWeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13회"
            android:textColor="@color/black"
            android:includeFontPadding="false"
            android:textFontWeight="400"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이번 달"
            android:includeFontPadding="false"
            android:textFontWeight="400"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="13sp"
            android:layout_gravity="center"/>

    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:paddingHorizontal="11dp"
            android:paddingVertical="10dp">

            <TextView
                android:id="@+id/tv_upgrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:text="2회"
                android:includeFontPadding="false"
                android:textFontWeight="400"
                android:textColor="@color/black" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="업그레이드까지"
                android:textSize="13sp"
                android:includeFontPadding="false"
                android:textFontWeight="400"
                android:layout_gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="11dp"
            android:paddingVertical="10dp">
            <TextView
                android:id="@+id/tv_thisMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13회"
                android:textColor="@color/black"
                android:includeFontPadding="false"
                android:textFontWeight="400"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이번주"
                android:includeFontPadding="false"
                android:textFontWeight="400"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="13sp"
                android:layout_gravity="center"/>
        </LinearLayout>

    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>